@page "/Categories"
@inject PostService _postService
@inject NavigationManager NavigationManager
@rendermode InteractiveServer
<PageTitle>Categories</PageTitle>


 <section class="relative h-[30vh] bg-cover bg-center rounded-2xl">
        <div class="rounded-2xl bg-[#F6F6F7] absolute inset-0 p-2  flex flex-col gap-4 items-center justify-center">
            <div class="flex items-center gap-2">
                <p class="text-2xl font-bold ">Categories</p>
            </div>
           
        </div>
    </section>

@if(categories is not null)
{
    <div class="grid gap-8 grid-cols-1 md:grid-cols-2 lg:grid-cols-3 2xl:grid-cols-4 my-6 justify-center">

        @foreach (var category in categories)
        {

            <MudCard Class="p-4 flex flex-col gap-3 w-full md:w-[350px] h-[200px] max-h-[500px]">

                <!-- Image -->
                <MudCardMedia Image="https://images.unsplash.com/photo-1517404215738-15263e9f9178?q=80&w=1470&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D" Height="150" />

                <!-- Category Chip -->
                <MudChip T="string" Variant="Variant.Filled" Color="Color.Primary" OnClick="() => NavigateToCategory(category.Id)">@category.Name</MudChip>

               
            </MudCard>

        }
    </div>
}

@code {
    private List<Category> categories;

    protected override async Task OnInitializedAsync()
    {
        categories = await _postService.GetAllCategoriesAsync();
    }
    private void NavigateToCategory(int Id)
    {
        NavigationManager.NavigateTo($"/category/{Id}");
    }
}
