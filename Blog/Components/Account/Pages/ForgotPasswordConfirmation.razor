@page "/Account/ForgotPasswordConfirmation"

<PageTitle>Forgot password confirmation</PageTitle>

<div class="flex flex-col items-center justify-center h-screen bg-gray-50 px-4">
    <div class="bg-white shadow-lg rounded-lg p-8 md:w-1/2 lg:w-1/3 text-center">
        <h1 class="text-2xl font-semibold text-gray-800 mb-4">Forgot Password Confirmation</h1>
        <p class="text-gray-600 mb-6">
            Please check your email to reset your password. If you don't see the email, be sure to check your spam or junk folder.
        </p>
    </div>
</div>

